{
    "name": "chinleung/laravel-multilingual-routes",
    "description": "A package to register multilingual routes.",
    "keywords": [
        "chinleung",
        "laravel-multilingual-routes",
        "routing",
        "localization",
        "laravel"
    ],
    "homepage": "https://github.com/chinleung/laravel-multilingual-routes",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Chin Leung",
            "email": "hello@chinleung.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "chinleung/laravel-locales": "^2.0",
        "illuminate/support": "^10.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0",
        "phpunit/phpunit": "^9.5.10"
    },
    "autoload": {
        "psr-4": {
            "ChinLeung\\MultilingualRoutes\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ChinLeung\\MultilingualRoutes\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "ChinLeung\\MultilingualRoutes\\MultilingualRoutesServiceProvider"
            ]
        }
    }
}
